<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fl_view_item_popular"
        android:layout_width="match_parent"
        android:foreground="@drawable/ripple_effect1"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="120dp">

        <android.support.design.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginStart="16dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/book_cover"/>
            </RelativeLayout>
        </android.support.design.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:background="#D8D8D8"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="@string/new_arrival_title"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_regular"
                android:gravity="center_vertical"
                android:layout_marginStart="110dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_arrival_description"
                android:textColor="#6B6B6b"
                android:ellipsize="end"
                android:maxLines="4"
                android:textSize="@dimen/text_small"
                android:layout_marginStart="110dp"/>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:text="@string/new_arrival_feedback"
        android:layout_below="@id/fl_view_item_popular"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_medium_2"/>
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_send"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_medium_2"/>
</RelativeLayout>